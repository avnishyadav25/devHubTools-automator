{{#if isPython}}
FROM python:3.9-slim
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY . .
CMD ["python", "app.py"]
{{else}}
FROM node:18-alpine
WORKDIR /app
COPY package*.json ./
{{#if isNext}}
RUN npm install
{{else}}
RUN npm install --production
{{/if}}
COPY . .
{{#if isNext}}
RUN npm run build
CMD ["npm", "start"]
{{else}}
CMD ["npm", "start"]
{{/if}}
{{/if}}
